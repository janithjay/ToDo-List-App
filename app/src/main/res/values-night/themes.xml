<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ToDoListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Main theme colors -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface_card</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/gradient_start</item>
        <item name="android:navigationBarColor">@color/gradient_end</item>

        <!-- Default styles -->
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="materialCardViewStyle">@style/AppCard</item>

        <!-- ActionBar style -->
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="cardElevation">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/gradient_start</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:tint">@color/text_primary</item>
    </style>

    <style name="AppDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/surface_card</item>
    </style>
</resources>
