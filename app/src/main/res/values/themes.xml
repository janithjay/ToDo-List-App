    <style name="Theme.ToDoListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorAccent">@color/neon_pink</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:buttonStyle">@style/NeonButton</item>
    </style>

    <style name="NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/neon_blue</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="NeonDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/NeonDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NeonDialogButton</item>
    </style>

    <style name="NeonDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neon_blue</item>
    </style>

</resources>
